<div class="container mt-5">
  <div class="row" id="shapes">
      <% @launchpad.try(:each) do |shape| %>
        <div class="col-3 mt-3">
          <div class="card" style="width: 16rem;height: 16rem;">
            <div class="card-body">
              <h5 class="card-title text-center"><%= shape.name %></h5>
              <div class="mb-3 mt-3 text-muted text-center">
                <i class="fa fa-<%= shape.icon %> fa-3x style="color:<%= shape.color %>" aria-hidden="true"></i>
              </div>
              <p class="card-text text-center" style="font-size: 15px"><%= shape.description %></p>
            </div>
            <div class="card-footer text-center">
              <div class="row">
                <div class="col-10">
                  <%= link_to "#{shape.link}", class:"text-muted", style: "text-decoration: none;font-size: 15px" do %>
                    Launch full shape
                  <% end %>
                </div>
                <% if user_signed_in? %>
                  <div class="col-2">
                    <%= link_to shape_user_hide_path(:id => shape), class:"text-danger", style: "text-decoration: none" do %>
                      <i class="fa fa-times-circle" aria-hidden="true"></i>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
